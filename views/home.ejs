<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home | URL-Shortner</title>
</head>
<body>
  <% if (locals.message) { %>
    <p><%= message %></p>
  <% } %>
  <% if (locals.error) { %>
    <p><%= error %></p>
  <% } %>
  <h1>URL Shortner</h1>
  <form action="/urls" method="POST">
    <label for="redirectURL">Enter Redirect URL</label>
    <input type="text" name="redirectURL" id="redirectURL" placeholder="Enter URL" />
    <button type="submit">Submit</button>
  </form>
  <div>
    <table>
      <tr>
        <th>Short URL</th>
        <th>redirect URL</th>
        <th>Total Clicks</th>
      </tr>
      <% urls.forEach((url) => { %>
        <tr>
          <td><%= url.shortID %></td>
          <td><%= url.redirectURL%></td>
          <td><%= url.visitHistory.length %></td>
        </tr>
      <% }) %>
    </table>
  </div>
</body>
</html>